<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    tools:context=".DetailActivity$DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/thumb_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/movie_detail_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/MovieDetailBackground"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/title_text"
                style="@style/MovieDetailTextHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_text"
                    style="@style/MovieDetailTextSubHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DATE" />

                <TextView
                    android:id="@+id/rating_text"
                    style="@style/MovieDetailTextSubHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RATING" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/SynopsisHeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="synopsis"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/synopsis_text"
            style="@style/SynopsisBodyText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>
